{
  "type": "object",
  "required": ["book"],
  "properties": {
    "book" : {
      "type" : "object",
      "required" : [
        "id",
        "isbn",
        "title",
        "description",
        "pages",
        "website",
        "published"
      ],
      "properties" : {
        "id":          { "type" : "integer" },
        "isbn":        { "type" : "string" },
        "title":       { "type" : "string" },
        "description": { "type" : "string" },
        "pages":       { "type" : "integer" },
        "website":     { "type" : "string" },
        "published":   { "type" : "string", "format": "date" }
      }
    }
  }
}
